<?xml version="1.0" encoding="utf-8"?>
<com.naram.ewoman_project.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:buttonTint="@color/colorCocoa"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_item_select"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_item_info1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_item_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="상품 이름"
            android:textColor="@color/colorGray"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="right"
            android:text="가격"
            android:textColor="@color/colorCocoa"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_info2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_item_info1_container"
        android:layout_toRightOf="@id/iv_item_image"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:textColor="@color/colorGray"
            android:layout_marginRight="20dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="수량"
            android:textColor="@color/colorDeepGray"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_item_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_image"
        android:layout_below="@+id/ll_item_info2_container"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:id="@+id/ll_item_info3_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_item_info2_container"
                android:layout_toRightOf="@+id/iv_item_image"
                android:fontFamily="@font/nanumbarungothic"
                android:text="Date"
                android:textColor="@color/colorGray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:text="장바구니에 담은 날짜"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_item_detail"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/ll_item_info3_container"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_style_border_line_white_background"
            android:text="상세사항"
            android:textColor="@color/colorGray"
            android:textSize="12dp" />

    </RelativeLayout>

</com.naram.ewoman_project.CheckableRelativeLayout>