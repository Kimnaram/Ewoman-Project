<?xml version="1.0" encoding="utf-8"?>
<com.naram.ewoman_project.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">>

    <CheckBox
        android:id="@+id/cb_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:clickable="false"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/cb_item_select"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_item_image"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="상품 이름"
        android:textColor="@color/colorGray"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/ll_product_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_item_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="Date"
            android:textColor="@color/colorGray"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="장바구니에 담은 날짜"
            android:textColor="@color/colorGray"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/rl_item_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_price_container"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="Price"
                    android:textColor="@color/colorGray"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price_info"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="가격"
                    android:textColor="@color/colorCocoa"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_count_container"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_price_container">

            <TextView
                android:id="@+id/tv_count_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="Count"
                android:textColor="@color/colorGray"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_count_info"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="수량"
                android:textColor="@color/colorCocoa"
                android:textSize="16dp" />

            </RelativeLayout>


            <Button
                android:id="@+id/btn_item_detail"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_style_border_line_white_background"
                android:text="상세사항"
                android:textSize="12dp"
                android:textColor="@color/colorGray" />

        </RelativeLayout>

    </LinearLayout>

</com.naram.ewoman_project.CheckableRelativeLayout>