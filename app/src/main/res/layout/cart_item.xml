<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textSize="20dp"
        android:text="상품 이름"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_item_image"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/ll_product_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_item_name"
        android:layout_toRightOf="@+id/iv_item_image">

        <TextView
            android:id="@+id/tv_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="Date"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="장바구니에 담은 날짜"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/rl_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:text="Price"
                android:textSize="11dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="가격"
                android:textSize="16dp"
                android:textColor="@color/colorCocoa"
                android:layout_below="@id/tv_price_info" />

            <TextView
                android:id="@+id/tv_count_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:text="Count"
                android:textSize="11dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="130dp" />

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="수량"
                android:textSize="16dp"
                android:textColor="@color/colorCocoa"
                android:layout_below="@id/tv_count_info"
                android:layout_alignParentRight="true"
                android:layout_marginRight="130dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>