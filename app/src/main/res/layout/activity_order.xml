<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <!--상단 툴바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="Order"
            android:textSize="23dp"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:id="@+id/rl_order_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp">

            <ListView
                android:id="@+id/lv_order_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:divider="@color/colorCocoa"
                android:background="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:dividerHeight="0.5dp">

            </ListView>

            <LinearLayout
                android:id="@+id/ll_item_price_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lv_order_product"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="결제 금액"
                    android:textColor="@color/colorGray"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="총 상품 금액"
                        android:textColor="@color/colorLightGray"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_item_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="right"
                        android:text="0원"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="총 배송비"
                        android:textColor="@color/colorLightGray"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_item_deliv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="right"
                        android:text="0원"
                        android:textColor="@color/colorGray"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="총 결제 금액"
                        android:textColor="@color/colorGray"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_item_all_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:gravity="right"
                        android:text="0원"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_deliv_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_below="@+id/ll_item_price_info_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="배송지 정보"
                    android:textColor="@color/colorGray"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="수령인"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorLightGray"
                        android:fontFamily="@font/nanumbarungothic"/>

                    <EditText
                        android:id="@+id/et_order_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:paddingLeft="5dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:inputType="text"
                        android:hint="이름을 입력해주세요." />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    tools:context="kr.co.aiotlab.howmuchapplication.Activity_Search_Address">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="휴대폰"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorLightGray"
                        android:fontFamily="@font/nanumbarungothic"/>

                    <EditText
                        android:id="@+id/et_order_phone"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:paddingLeft="5dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:inputType="phone"
                        android:hint="휴대폰 번호를 입력해주세요." />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="우편번호"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorLightGray"
                        android:fontFamily="@font/nanumbarungothic"/>

                    <EditText
                        android:id="@+id/et_order_zipcode"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:editable="false"
                        android:hint="" />

                    <Button
                        android:id="@+id/btn_order_zipcode"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:layout_gravity="center"
                        android:text="우편번호 검색" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="주소지"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorLightGray"
                        android:fontFamily="@font/nanumbarungothic"/>

                    <EditText
                        android:id="@+id/et_order_address1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:paddingLeft="5dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:textColor="@color/colorGray"
                        android:editable="false"
                        android:hint="주소지를 입력해주세요." />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="상세주소"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorLightGray"
                        android:fontFamily="@font/nanumbarungothic"/>

                    <EditText
                        android:id="@+id/et_order_address2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:paddingLeft="5dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:inputType="text"
                        android:hint="상세주소를 입력해주세요." />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="배송메모"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorLightGray"
                        android:fontFamily="@font/nanumbarungothic"/>

                    <Spinner
                        android:id="@+id/sp_order_deliv_message"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:entries="@array/delivery_message"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_billing_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ll_item_deliv_info_container">

                <Button
                    android:id="@+id/btn_billing_try"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style_border_line_cocoa_background"
                    android:text="결제하기"
                    android:fontFamily="@font/nanumbarungothic"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_cancel_try"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_style_border_line_white_background"
                    android:text="취소하기"
                    android:fontFamily="@font/nanumbarungothic"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>