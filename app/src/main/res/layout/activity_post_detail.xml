<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostDetailActivity">

    <!--상단 툴바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="e Review"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/sv_post_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_review_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothicbold"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="카테고리"
                android:textColor="@color/colorCocoa"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_review_title_info"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_review_category"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="제목"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_review_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_review_category"
                android:layout_toRightOf="@+id/tv_review_title_info"
                android:fontFamily="@font/nanumbarungothicbold"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="TITLE"
                android:textColor="@color/colorCocoa"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_review_user_info"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_review_title_info"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="작성자"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_review_user"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/tv_review_title"
                android:layout_toRightOf="@+id/tv_review_user_info"
                android:fontFamily="@font/nanumbarungothicbold"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/colorCocoa"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/iv_review_image"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_below="@+id/tv_review_user_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_review_image"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_style_border_line_cocoa"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="left|start"
                android:minHeight="100dp"
                android:padding="5dp"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/btn_review_like"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_review_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_style_border_line_cocoa_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/rev_like" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_review_update"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_review_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_review_delete"
                android:background="@drawable/btn_style_border_line_white_background"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="center"
                android:text="수정"
                android:textColor="@color/colorGray"
                android:textSize="18dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_review_delete"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_review_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_style_common"
                android:backgroundTint="@color/colorCocoa"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="center"
                android:text="삭제"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_progressbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>

</LinearLayout>