<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/btn_style_border_line_white_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_thumbnail"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="TITLE"
                android:textColor="@color/colorGray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_height_divider_line"
                    android:layout_width="3dp"
                    android:layout_height="53dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/colorCocoa" />

                <TextView
                    android:id="@+id/tv_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/nanumbarungothic"
                    android:includeFontPadding="false"
                    android:text="CONTENT\nCONTENT\nCONTENT"
                    android:textColor="@color/colorCocoa"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/v_height_divider_line"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>