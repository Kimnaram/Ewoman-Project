<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--상단 툴바-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:minHeight="?attr/actionBarSize">

<!--                <ImageView-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_marginRight="20dp"-->
<!--                    android:background="@null"-->
<!--                    android:src="@drawable/common_menu" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:gravity="center"
                    android:text="ewoman"
                    android:textSize="25dp"
                    android:textStyle="bold"></TextView>

            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/rl_main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_ewoman_main_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ewoman_main_logo"
                    android:text="ewoman" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_ewoman_main_logo"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/btn_to_ecollege"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        android:background="@color/colorWhite"
                        android:text="College"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btn_to_ourstry"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@+id/btn_to_ecollege"
                        android:background="@color/colorWhite"
                        android:text="Our Story"
                        android:textSize="15dp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/navigation_item"
            app:menu="@menu/navigation_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>

</RelativeLayout>