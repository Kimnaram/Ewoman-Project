<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--상단 툴바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/common_menu"
            android:background="@null"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ewoman"
            android:fontFamily="@font/nanumbarungothic"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center">
        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_below="@+id/toolbar" />

    <RelativeLayout
        android:id="@+id/rl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:id="@+id/iv_ewoman_main_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:text="ewoman"
            android:src="@drawable/ewoman_main_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ewoman_main_logo"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_to_ecollege"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@color/colorWhite"
                android:text="College"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_to_ourstry"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:layout_toRightOf="@+id/btn_to_ecollege"
                android:background="@color/colorWhite"
                android:text="Our Story"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>