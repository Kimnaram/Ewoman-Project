<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp" >

            <!--상단 툴바-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:minHeight="?attr/actionBarSize">

                <TextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="23dp"
                    android:textStyle="bold"></TextView>

            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/rl_category_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar" >

                <TextView
                    android:id="@+id/tv_category_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="Home"
                    android:textColor="@color/colorLightGray"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_category_dv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tv_category_home"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text=">"
                    android:textColor="@color/colorLightGray"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/tv_category_dv1"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textColor="@color/colorLightGray"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_category_dv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/tv_category_name"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text=">"
                    android:textColor="@color/colorLightGray"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_category_pd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/tv_category_dv2"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_product_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_category_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/iv_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_item_image"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="상품 이름"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_name"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="상품 가격"
                    android:textColor="@color/colorCocoa"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/tv_item_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_price"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="상품 설명"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_item_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_detail"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="원산지"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp" />

                <TextView
                    android:id="@+id/tv_item_origin_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_detail"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/tv_item_origin"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp" />

                <TextView
                    android:id="@+id/tv_item_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_origin"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="배송 방법"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp" />

                <TextView
                    android:id="@+id/tv_item_delivery_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_origin"
                    android:layout_marginBottom="17dp"
                    android:layout_toRightOf="@+id/tv_item_delivery"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp" />

                <TextView
                    android:id="@+id/tv_option_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_delivery_is"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp" />

                <Spinner
                    android:id="@+id/sp_option_1"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_option_1"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/tv_option_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp_option_1"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/sp_option_2"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_option_2"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_option_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp_option_2"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16.5dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/sp_option_3"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_option_3"
                    android:background="@color/colorWhite"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_product_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_buy_try"
                    android:layout_width="110dp"
                    android:layout_height="47.5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_style_border_line"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="구매하기"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorCocoa"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_cart_try"
                    android:layout_width="110dp"
                    android:layout_height="47.5dp"
                    android:layout_toRightOf="@+id/tv_buy_try"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/btn_style_border_line"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="장바구니"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_wishlist_try"
                    android:layout_width="110dp"
                    android:layout_height="47.5dp"
                    android:layout_toRightOf="@+id/tv_cart_try"
                    android:background="@drawable/btn_style_border_line"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="0"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/prd_wishlist_ico"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>