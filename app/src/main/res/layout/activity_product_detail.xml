                    <!--                    android:visibility="gone" />-->

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_count_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_product_container"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_count_minus"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_style_rounded"
                        android:backgroundTint="@color/colorCocoa"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="-"
                        android:textColor="@color/colorWhite"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/tv_count_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="1"
                        android:textColor="@color/colorCocoa"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/btn_count_plus"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/btn_style_rounded"
                        android:backgroundTint="@color/colorCocoa"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="+"
                        android:textColor="@color/colorWhite"
                        android:textSize="23dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_user_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_count_btn_container"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv_buy_try"
                        android:layout_width="110dp"
                        android:layout_height="47.5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:backgroundTint="@color/colorCocoa"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_cart_try"
                        android:layout_width="110dp"
                        android:layout_height="47.5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_buy_try"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="center"
                        android:text="장바구니"
                        android:textColor="@color/colorGray"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_wishlist_try"
                        android:layout_width="110dp"
                        android:layout_height="47.5dp"
                        android:layout_toRightOf="@+id/tv_cart_try"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:drawableLeft="@drawable/item_heart_ico"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:textColor="@color/colorGray"
                        android:textSize="18dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_develop_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_count_btn_container"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_update_try"
                        android:layout_width="110dp"
                        android:layout_height="47.5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="center"
                        android:text="수정하기"
                        android:textColor="@color/colorGray"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_delete_try"
                        android:layout_width="110dp"
                        android:layout_height="47.5dp"
                        android:layout_toRightOf="@+id/tv_update_try"
                        android:background="@drawable/btn_style_border_line_white_background"
                        android:text="삭제하기"
                        android:fontFamily="@font/nanumbarungothic"
                        android:gravity="center"
                        android:textColor="@color/colorGray"
                        android:textSize="18dp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

