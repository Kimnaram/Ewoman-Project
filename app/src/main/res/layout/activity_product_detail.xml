<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <!--상단 툴바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/nanumbarungothic"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/rl_warn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_empty_product"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/item_empty_100" />

                <TextView
                    android:id="@+id/tv_warn_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_empty_product"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nanumsquare"
                    android:text="해당 상품을 준비중입니다."
                    android:textSize="22dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_category_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/tv_category_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="Home"
                        android:textColor="@color/colorLightGray"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_category_dv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_category_home"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text=">"
                        android:textColor="@color/colorLightGray"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/tv_category_dv1"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorLightGray"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_category_dv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/tv_category_name"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text=">"
                        android:textColor="@color/colorLightGray"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_category_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/tv_category_dv2"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="17dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_product_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_category_container"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/iv_item_image"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_item_image"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="상품 이름"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tv_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_item_name"
                        android:layout_marginBottom="17dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="상품 가격"
                        android:textColor="@color/colorCocoa"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tv_item_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_item_price"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="상품 설명"
                        android:textColor="@color/colorGray"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_item_deliv_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_item_detail"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="배송 방법"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="16.5dp" />

                    <TextView
                        android:id="@+id/tv_item_deliv_method_is"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_item_detail"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/tv_item_deliv_method"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="16.5dp" />

                    <TextView
                        android:id="@+id/tv_item_deliv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_item_deliv_method"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="배송비"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="16.5dp" />

                    <TextView
                        android:id="@+id/tv_item_deliv_price_is"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_item_deliv_method"
                        android:layout_marginBottom="8dp"
                        android:layout_toRightOf="@+id/tv_item_deliv_price"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="16.5dp" />

                    <LinearLayout
                        android:id="@+id/ll_spinner_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="17dp"
                        android:visibility="gone"
                        android:layout_below="@id/tv_item_deliv_price_is">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/nanumbarungothicbold"
                            android:text="Class  *"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="16.5dp" />
                        
                        <Spinner
                            android:id="@+id/sp_class_info"
                            android:layout_width="250dp"
                            android:layout_height="36dp"
                            android:background="@drawable/btn_style_border_line_white_background"
                            android:theme="@style/SpinnerTheme"/>

                    </LinearLayout>

